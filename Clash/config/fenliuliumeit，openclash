[custom]

# ================== 规则集配置 ==================
ruleset=局域网,rules/ACL4SSR/Clash/LocalAreaNetwork.list
ruleset=默认直连,[]FINAL

# ================== 策略组配置 ==================

# 自动选择测速组（没有节点，测试组空）
custom_proxy_group=自动选择`url-test`自动选择.*`http://www.gstatic.com/generate_204`300,,50

# 全局直连组（只有直连，没有节点）
custom_proxy_group=全球直连`select`DIRECT

# 故障转移组（空组，没有节点）
custom_proxy_group=故障转移`fallback``http://www.gstatic.com/generate_204`7200,,50

# 节点选择组（只包含上述3组，方便切换）
custom_proxy_group=节点选择`select`自动选择`故障转移`全球直连

# ================== 启用规则生成 ==================
enable_rule_generator=true
